{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Microsoft Edge against localhost, with sourcemaps",
            "type": "pwa-msedge",
            "request": "launch",
            "url": "https://localhost:9090",
            "sourceMaps": true,
            "webRoot": "${workspaceRoot}",
            "trace": true,
            "smartStep": true,
            "userDataDir": "${workspaceRoot}/out/chrome"
        },
        {
            "name": "Attach to Microsoft Edge, with sourcemaps",
            "type": "pwa-msedge",
            "request": "attach",
            "port": 9222,
            "sourceMaps": true,
            "webRoot": "${workspaceRoot}"
        }
    ]
}